<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.nicolab.meteodelsangue.app.LegendaActivity"
    android:background="#EDEDED">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <!-- ECCEDENZA -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:text="Eccedenza"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="Gravissima carenza: le scorte di sangue sono bassissime. Contattaci appena puoi per prenotare una donazione. Abbiamo bisogno del tuo aiuto."
                        android:layout_width="269dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/eccedenza"/>

                </LinearLayout>

            </LinearLayout>

            <!-- STABILE -->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:text="Stabile"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="Sostanziale autosufficienza: le scorte di sangue sono molto buone. Puoi recarti a donare quando lo ritieni più opportuno e provare la donazione di sangue o multicomponenti."
                        android:layout_width="269dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/stabile"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Fragile -->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:text="Fragile"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="Leggera carenza: le disponibilità di sangue non sono ottimali. Ti consigliamo quindi di chiamarci e prenotare una donazione il prima possibile."
                        android:layout_width="269dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/fragile"/>

                </LinearLayout>

            </LinearLayout>

            <!-- URGENTE -->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView

                    android:text="Urgente"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="Grave carenza: le scorte di sangue sono molto basse. Se puoi tornare a donare, contattaci per fissare un appuntamento per la donazione."
                        android:layout_width="269dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/urgente"/>

                </LinearLayout>

            </LinearLayout>

            <!-- EMERGENZA -->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView

                    android:text="Emergenza"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="Grave carenza: le scorte di sangue sono molto basse. Se puoi tornare a donare, contattaci per fissare un appuntamento per la donazione."
                        android:layout_width="269dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@drawable/emergenza"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
